# Environment mode
NODE_ENV=development

# Server port
PORT=5000

# MongoDB connection URI (local or Atlas)
MONGO_URI=mongodb+srv://username:password@cluster0.mongodb.net/pizzaapp?retryWrites=true&w=majority

# JWT Secret for authentication token signing
JWT_SECRET=your_jwt_secret_key

# Salt rounds for bcrypt hashing
SALT=10

# Email sender credentials (for Nodemailer)
SENDER_EMAIL=your_email@example.com
SENDER_PASSWORD=your_email_password

# Super admin email (optional, for admin-level notifications)
SUPERADMIN_EMAIL=admin@example.com

# Razorpay API keys (Test mode)
RAZORPAY_KEY_ID=rzp_test_yourkeyid
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
